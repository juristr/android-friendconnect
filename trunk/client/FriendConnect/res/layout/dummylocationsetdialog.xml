<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="10dp">

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Latitude" android:paddingBottom="10dp"/>

	<EditText android:id="@+id/editTextLatitude"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingBottom="10dp" />
		
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Longitude" android:paddingBottom="10dp"/>

	<EditText android:id="@+id/editTextLongitude"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingBottom="10dp" />		

	<Button android:layout_gravity="center_horizontal" android:id="@+id/buttonSubmitLoc" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="submit location" />
			
</LinearLayout>
